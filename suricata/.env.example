# Sample .env for Suricata EVE Forwarder
# Path to eve.json produced by Suricata (adjust to your system)
EVE_FILE_PATH=/var/log/suricata/eve.json

# Where to forward parsed events (required)
TARGET_URL=http://your.endpoint.example/receive

# Authentication type: none, basic, bearer
HTTP_AUTH_TYPE=none
# For basic auth
HTTP_AUTH_USERNAME=
HTTP_AUTH_PASSWORD=
# For bearer token
HTTP_AUTH_BEARER_TOKEN=

# Batch and timing settings
BATCH_SIZE=50
BATCH_INTERVAL=2.0
READ_INTERVAL=0.1

# App server
PORT=8000
LOG_LEVEL=info
